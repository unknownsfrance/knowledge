<div class="col-xs-12">
	<div class="panel panel-default">
  		<div class="panel-body">
	  		<div class="col-xs-12">
	  			
		    	<form class="form-inline" method="GET" action="<%= url_for(controller: 'search', action: 'results') %>">
				  Search Content: 
				  <div class="form-group">
				    <input type="text" name="q" class="form-control" id="searchInput" placeholder="What are you looking for?" value="<%= @query %>">
				  </div>
				  <button type="submit" class="btn btn-default">Search</button>
				</form>
			</div>
		 	<div class="col-xs-12" style="margin-top: 10px;">
		 		Create Content: 
				<%= link_to 'Technology', new_technology_path, class: 'btn btn-primary' + (controller.class.name == 'TechnologiesController' ? ' active' : '') %>
				<%= link_to 'Enterprise', new_person_path, class: 'btn btn-primary' + (controller.class.name == 'EnterprisesController' ? ' active' : '') %>
				<%= link_to 'People', new_person_path, class: 'btn btn-primary' + (controller.class.name == 'PeoplesController' ? ' active' : '') %>
				<%= link_to 'Idea', new_idea_path, class: 'btn btn-primary' + (controller.class.name == 'IdeasController' ? ' active' : '') %>
				<%= link_to 'Document', new_document_path, class: 'btn btn-primary' + (controller.class.name == 'DocumentsController' ? ' active' : '') %>
			</div>
	 	</div>
	</div>
</div>
