<!DOCTYPE html>
<html>
	<head>
		<title>Knowledge</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=places', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'shared/navigation' %>
		<div id="main-container" class="container">
			<div class="row">
		        <div class="col-xs-12">
		          <% flash.each do |name, msg| -%>
		            <%= content_tag :div, msg, class: "alert alert-#{name}" %>
		          <% end -%>
		        </div>
	     	</div>
			<div class="row">
				<%= render 'shared/leftbar' %>
				
				<div class="col-xs-9">
					<!-- Search Area -->
					<%= render 'shared/search' %>
					<% if params[:q] %>
						<%= render 'shared/filternav' %>
					<% end %>
					
					<!-- Main Content // Create -->
					<div class="col-xs-12">
						<%= yield %>
					</div>
					<!--
					<ul id="myTags" class="taggable" data-jsonurl="">
					</ul>
					-->
				</div>
			</div>
		</div>
	</body>
</html>
