<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Nb people</th>
      <th>Adresse</th>
      <th>Contact name</th>
      <th>Files</th>
      <th>Tags</th>
      <th>Expertises</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.url %></td>
        <td><%= person.description %></td>
        <td><%= person.nb_people %></td>
        <td><%= person.adresse %></td>
        <td><%= person.contact_name %></td>
        <td><%= person.files %></td>
        <td><%= person.tags %></td>
        <td><%= person.expertises %></td>
        <td><%= person.category %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

