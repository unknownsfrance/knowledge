<p id="notice"><%= notice %></p>

<h1>Listing Technologies</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Files</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @technologies.each do |technology| %>
      <tr>
        <td><%= technology.name %></td>
        <td><%= technology.url %></td>
        <td><%= technology.description %></td>
        <td><%= technology.tags %></td>
        <td><%= technology.files %></td>
        <td><%= link_to 'Show', technology, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_technology_path(technology), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', technology, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_technology_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Technology
<% end %>
